@model HamedaniProject.MoviesTable
@{
    ViewBag.Title = "AddMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddMovies</h2>

@using (Html.BeginForm("AddMoviesToDb", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m=>m.Name)
        
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ReleaseDate)
        @Html.TextBoxFor(m => m.ReleaseDate, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.TextBoxFor(m => m.Genre, new { @class = "form-control" })

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AvailableStock)
        @Html.TextBoxFor(m => m.AvailableStock, new { @class = "form-control" })

    </div>

    @Html.HiddenFor(c=>c.Id)

 
    <button type="submit" class="btn btn-primary">Save</button>
}